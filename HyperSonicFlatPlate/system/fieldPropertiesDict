FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      fieldPropertiesDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //


dsmcFields
(
     field
     {
         fieldModel          	dsmcVolFields;
 
         timeProperties
         {
            timeOption          write;
            resetAtOutput       off;
            resetAtOutputUntilTime  8e-3;    
         }
         
         dsmcVolFieldsProperties
         {
            fieldName                 N2cold;
           	typeIds                 (N2cold);
           	measureMeanFreePath         true;
           	averagingAcrossManyRuns    false;
         }
     }
);

